<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/fargment_settings"
    android:background="@color/red_3"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEFINIÇÕES"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:id="@+id/app_header"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/app_header_logged_user"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="15dp"
        android:layout_below="@id/app_header"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_header_logged_user"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="@color/red_2"
            android:textColor="@color/white"

            android:id="@+id/change_username"
            android:text="TROCAR USERNAME"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="@color/red_2"
            android:textColor="@color/white"

            android:id="@+id/change_password"
            android:text="TROCAR SENHA"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_2"
            android:textColor="@color/white"
            android:onClick="logout"
            android:id="@+id/x_logout_btn"
            android:text="LOGOUT"
            />
    </LinearLayout>
</RelativeLayout>